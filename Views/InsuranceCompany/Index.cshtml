@model IEnumerable<iStudyTest.Models.InsuranceCompany>

@{
    ViewData["Title"] = "保險公司列表";
}

<h3>@ViewData["Title"]</h3>

<p>
    <a asp-action="Create" class="btn btn-info">新增保險公司</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CompanyID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompanyName)
            </th>
            <th>管理</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyID)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.CompanyName)
            </td>
            <td class="d-flex">
                <a asp-action="Edit" asp-route-id="@item.CompanyID" class="btn btn-warning">修改</a> 
                <form asp-action="Delete">
                    <input type="hidden" value="@item.CompanyID" name="id" />
                        <input type="submit" value="刪除" class="btn btn-danger" onclick="return confirm('您確定要刪除 @(item.CompanyID+item.CompanyName) 資料嗎? 刪除後是救不回來的哦!')" />
                </form>
            </td>
        </tr>
}
    </tbody>
</table>
