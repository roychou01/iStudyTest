@model iStudyTest.Models.ServiceList

@{
    Layout = "_ManageLayout";
    ViewData["Title"] = "Edit";
}

<h1>服務單編輯</h1>

<hr />

<div class="row">
    <div class="col-lg-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ServiceNumber" />
            <h5 class="text-danger">單號 <br />
                @Model.ServiceNumber</h5>
            <div class="form-group">
                <label asp-for="CreateDate" class="control-label"></label>
                <input type="hidden" asp-for="CreateDate"/>
                <p>@Model.CreateDate</p>
                
            </div>
            <div class="form-group">
                <label asp-for="MemberID" class="control-label"></label>
                <select asp-for="MemberID" class="form-control" asp-items="ViewBag.Member" readonly></select>
                
            </div>
            <div class="form-group">
                <label asp-for="CurrentBusiness" class="control-label"></label>
                <select asp-for="CurrentBusiness" class="form-control" asp-items="ViewBag.Employee"></select>
                <span asp-validation-for="CurrentBusiness" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StateCode" class="control-label"></label>
                <select asp-for="StateCode" class="form-control" asp-items="ViewBag.StateList"></select>
                <span asp-validation-for="StateCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="儲存" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-success">回留單頁</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
