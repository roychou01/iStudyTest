@model iStudyTest.Models.ServiceList

@{
    Layout = "_ManageLayout";
    ViewData["Title"] = "Create";
}

<h2>代客新增服務單</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="MemberID" class="control-label"></label>
                <select asp-for="MemberID" class ="form-control" asp-items="ViewBag.Member"></select>
            </div>
            <div class="form-group">
                <label asp-for="StateCode" class="control-label"></label>
                <select asp-for="StateCode" class ="form-control" asp-items="ViewBag.StateList"></select>
            </div>
            
            <div class="form-group">
                <input type="submit" value="確定新增" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-primary">回留單頁</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
